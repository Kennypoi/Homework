1.
public class TestArray {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// 要求数组长度为5，分别赋值10，20，30，40，50，在控制台输出该数组的值。（知识点：数组定义和创建、一维数组初始化）
		int []a={10,20,30,40,50};
		for (int i : a) {
			System.out.println(i);
		}

	}

}

2.
public class TestArray {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// 输出一个double型二维数组（长度分别为5、4，值自己设定）的值。（知识点：数组定义和创建、多维数组初始化、数组遍历）
		
		Double[][]arr={{1.1,2.2,3.3,4.4},{1.1,2.2,3.3,4.4},{1.1,2.2,3.3,4.4},{1.1,2.2,3.3,4.4}};
		
		for (int i = 0; i < arr.length; i++) {
			
			for (int j = 0; j < arr.length; j++) {
				System.out.print(arr[i][j]+",");
			}
			
			System.out.println(" ");
		}
	}

}

3.
public class TestArray {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// 将一个字符数组的值（neusofteducation）考贝到另一个字符数组中。（知识点：数组复制）
		char[]a={'n','e'};
		char[]b=new char[a.length];
		
		for (int i = 0; i < a.length; i++) {
			b[i]=a[i];
			System.out.print(b[i]);
		}
		
		
	}

}

4.
import java.util.Arrays;

public class TestArray {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// 4． 给定一个有9个整数（1,6,2,3,9,4,5,7,8}）的数组，先排序，然后输出排序后的数组的值。（知识点：数组排序）
		
		int a[]={1,6,2,3,9,4,5,7,8};
		
		Arrays.sort(a);
		
		for (int i = 0; i < a.length; i++) {
			System.out.println(a[i]);
		}
	
		
	}

}

5.
public class TestArray {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		//  5.在一个有8个整数（18，25，7，36，13，2，89，63）的数组中找出其中最大的数及其下标。（知识点：数组遍历、数组元素访问）
		
		int a[]={18,25,7,36,13,2,89,63};
		int xb=0;
		int max=a[0];
		
		for (int i = 0; i < a.length; i++) {
			if (a[i]>max) {
				max=a[i];
				xb=i;
			}
		}
		
		System.out.println("最大值为"+max);
		System.out.println("最大值的下标为"+xb);
	}

}

